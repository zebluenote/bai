{% extends "base.admin.html.twig" %}

{% block body %}
<div class="container">
    <h1>Chargement d'une nouvelle image</h1>

    {# {{ dump(destinations) }} #}

    {{ form_start(form) }}
        <div class="row clearfix">
            <div class="col-md-6">{{ form_row(form.destination) }}</div>
            <div class="col-md-6">{{ form_row(form.uploadedFile) }}</div>
        </div>
        <button type="submit" class="btn btn-secondary float-right">Upload</button>
    {{ form_end(form) }}
</div>
    
{% endblock %}

{% block javascripts %}
    
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script>
    $(document).ready(function () {
        bsCustomFileInput.init()
    })
</script>

{% endblock %}